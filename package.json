{
  "name": "better-together",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "jest": {
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "scripts": {
    "dev": "vite",
    "start": "nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/server.ts",
    "ts-dev": "ts-node-dev --respawn --transpile-only server/server.ts",
    "ts-dev-both": "tsc server/server.ts && node server/server.cjs",
    "build": "tsc && vite build",
    "test": "jest --coverage",
    "preview": "vite preview",
    "lint": "eslint './**/*.{ts,tsx,js,jsx}'"
  },
  "dependencies": {
    "concurrently": "^8.0.1",
    "express": "^4.18.2",
    "mongoose": "^7.0.3",
    "nodemon": "^2.0.22",
    "pg": "^8.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-node": "^10.9.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^3.1.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0"
  }
}
